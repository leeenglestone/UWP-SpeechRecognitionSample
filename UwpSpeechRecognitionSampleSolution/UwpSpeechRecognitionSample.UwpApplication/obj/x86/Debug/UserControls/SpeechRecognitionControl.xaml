<UserControl
    x:Class="UwpSpeechRecognitionSample.UwpApplication.UserControls.SpeechRecognitionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpSpeechRecognitionSample.UwpApplication.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:UwpSpeechRecognitionSample.UwpApplication.Converters"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="400"
    Height="180"
    Width="400">
    
    <UserControl.Resources>
        <converters:ListeningStateToTextConverter x:ConnectionId='1' x:Name="ListeningStateToTextConverter"/>
    </UserControl.Resources>

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='2' x:Name="BtnStopListening" Content="Stop Listening" Background="Red" Visibility="{Binding Path=StopListeningButtonVisibility}"                               />
                <Button x:ConnectionId='3' x:Name="BtnStartListening" Content="Start Listening" Background="Green" Visibility="{Binding Path=StartListeningButtonVisibility}"                                />
            </StackPanel>

            <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelTextStyle}" Text="Listening State" />
            <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ListeningStateTextStyle}" Text="{Binding Path=ListeningState, Converter={StaticResource ListeningStateToTextConverter}, FallbackValue='[Listening State]'}" />

            <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource LabelTextStyle}" Text="Recognised Phrase" />
            <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource RecognisedTextStyle}" Text="{Binding Path=RecognisedPhrase, FallbackValue='[Recognised Phrase]'}" />

            <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource LabelTextStyle}" Text="Action Result" />
            <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource ActionTextStyle}" Text="{Binding Path=ActionResult, FallbackValue='[Action Result]'}" />

            <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource LabelTextStyle}" Text="Awake Phrase" />
            <TextBlock Grid.Column="1" Grid.Row="4" Style="{StaticResource ActionTextStyle}" Text="{Binding Path=AwakePhrase, FallbackValue='[Awake Phrase]'}" />


        </Grid>

    </Border>
</UserControl>

